{
	"env": {
		"browser": true,
		"es6": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true
		}
	},
	"plugins": ["babel"],
	"extends": ["eslint:recommended", "plugin:import/errors", "plugin:import/warnings"],
	"rules": {
		"no-unused-vars": "warn",
		"no-console": "warn",
		"no-empty": "warn",
		"no-redeclare": "warn",
		"no-useless-escape": "warn",
		"no-inner-declarations": "off",
		"no-mixed-spaces-and-tabs": "warn",
		"no-extra-semi": "warn",
		"no-case-declarations": "warn",
		"no-debugger": "warn",
		"space-before-function-paren": "off"
	},
	"globals": {
		"$": true,
		"jQuery": true
	}
}
